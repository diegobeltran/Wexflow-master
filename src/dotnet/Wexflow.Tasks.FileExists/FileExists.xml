<?xml version="1.0" encoding="utf-8" ?>
<Tasks>
  <!--
    FileExists is a flowchart task that checks whether a file exists or not.
  -->
  <Task id="$int" name="FileExists" description="$string" enabled="true|false">
    <!-- 
      The file path to check. Example: C:\WexflowTesting\file1.txt
    -->
    <Setting name="file" value="$string" />    
  </Task>
</Tasks>